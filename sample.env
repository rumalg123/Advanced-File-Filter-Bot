# Bot Configuration
SESSION=Media_search
API_ID=your_api_id_here
API_HASH=your_api_hash_here
BOT_TOKEN=your_bot_token_here

# Database Configuration
DATABASE_URI=mongodb://localhost:27017
DATABASE_NAME=PIRO
COLLECTION_NAME=FILES

# Redis Configuration (for caching and session management)
REDIS_URI=redis://localhost:6379

# Multi-Database Configuration (Enterprise Features) üöÄ
# Add multiple database URIs for automatic scaling and failover
# When one database reaches size limit, bot switches to next database
# All databases will be searched simultaneously for files
# Comma-separated list of MongoDB URIs (optional)
# DATABASE_URIS=mongodb+srv://user:pass@cluster1.mongodb.net,mongodb+srv://user:pass@cluster2.mongodb.net,mongodb+srv://user:pass@cluster3.mongodb.net

# Database names for each URI (optional, uses DATABASE_NAME if not specified)
# Must match the number of URIs in DATABASE_URIS
# DATABASE_NAMES=PIRO_DB1,PIRO_DB2,PIRO_DB3

# Database size limit before switching to next database (in GB)
DATABASE_SIZE_LIMIT_GB=0.5

# Enable automatic database switching when size limit is reached
DATABASE_AUTO_SWITCH=True

# Circuit breaker configuration (optional - uses defaults if not set)
DATABASE_MAX_FAILURES=5             # Max failures before circuit opens (default: 5)
DATABASE_RECOVERY_TIMEOUT=300       # Seconds before testing recovery (default: 300)
DATABASE_HALF_OPEN_CALLS=3          # Max calls in HALF_OPEN state (default: 3)

# Server Configuration
PORT=8000
WORKERS=50

# Feature Flags
USE_CAPTION_FILTER=True
DISABLE_PREMIUM=True
DISABLE_FILTER=False
PUBLIC_FILE_STORE=False
KEEP_ORIGINAL_CAPTION=True
USE_ORIGINAL_CAPTION_FOR_BATCH=True

# Limits and Durations
PREMIUM_DURATION_DAYS=30
NON_PREMIUM_DAILY_LIMIT=10
MESSAGE_DELETE_SECONDS=300
MAX_BTN_SIZE=12

# Request System Configuration
REQUEST_PER_DAY=3
REQUEST_WARNING_LIMIT=5

# Channel and Admin Configuration
# Add admin user IDs separated by commas
ADMINS=123456789,987654321

# Channels for auto-indexing (comma separated IDs or usernames)
CHANNELS=-1001234567890,@channel_username

# Log channel for bot activities
LOG_CHANNEL=-1001234567890

# Channel for index requests (optional, uses LOG_CHANNEL if not set)
INDEX_REQ_CHANNEL=

# File store channels (space separated for multiple)
FILE_STORE_CHANNEL=-1001234567890 -1001234567891

# Channel for file deletion
DELETE_CHANNEL=

# Support Group Configuration
SUPPORT_GROUP_URL=https://t.me/your_support_group
SUPPORT_GROUP_NAME=Support Group
SUPPORT_GROUP_ID=-1001234567890

# Request channel (optional, uses LOG_CHANNEL if not set)
REQ_CHANNEL=

# Authentication Configuration
